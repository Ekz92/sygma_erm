  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls, Vcl.Grids,
  Vcl.ExtCtrls;

type
  TfrmParamNumFact = class(TForm)
    Bevel2: TBevel;
    Bevel1: TBevel;
