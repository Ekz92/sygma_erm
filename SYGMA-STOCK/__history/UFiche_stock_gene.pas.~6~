type
  TfrmFiche_stock_gene = class(TForm)
    GroupBox1: TGroupBox;
    Label1: TLabel;
    Label4: TLabel;
    cb_magasin: TComboBox;
    edcode_mag: TEdit;
    CheckBox1: TCheckBox;
